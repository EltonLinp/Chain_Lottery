# RPC endpoint (HTTP)
RPC_URL=http://127.0.0.1:8545
# Chain ID (optional) e.g. Hardhat localhost
CHAIN_ID=31337
# Private key for oracle role signer (hex string without 0x prefix allowed)
ORACLE_PRIVATE_KEY=0xabc123...

# Polling interval in seconds
POLL_INTERVAL_SECONDS=15
# Persisted state file
STATE_FILE=oracle_state.json

# Upstream data source configuration
DATASOURCE__URL=https://example.com/api/latest-draw
DATASOURCE__ISSUE_KEY=drawNumber
DATASOURCE__NUMBERS_KEY=numbers
DATASOURCE__DATE_KEY=drawDate
DATASOURCE__TIMEOUT_SECONDS=10

# Lottery contract configuration
CONTRACT__ADDRESS=0x0000000000000000000000000000000000000000
CONTRACT__ABI_PATH=artifacts/contracts/LotteryCore.sol/LotteryCore.json
CONTRACT__GAS_LIMIT=300000
CONTRACT__CONFIRMATIONS=1
